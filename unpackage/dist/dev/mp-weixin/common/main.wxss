/* 自定义全局css */
.content {
	display: -webkit-box;
	display: -webkit-flex;
	display: flex; -webkit-box-orient: vertical; -webkit-box-direction: normal; -webkit-flex-direction: column; flex-direction: column; -webkit-box-align: center; -webkit-align-items: center; align-items: center; -webkit-box-pack: center; -webkit-justify-content: center; justify-content: center;
}
/* flex 布局 */
.xd-flex{display:-webkit-box;display:-webkit-flex;display:flex;}
.xd-rows{display:-webkit-box;display:-webkit-flex;display:flex; -webkit-box-orient:horizontal; -webkit-box-direction:normal; -webkit-flex-direction:row; flex-direction:row;}
.xd-columns{display:-webkit-box;display:-webkit-flex;display:flex; -webkit-box-orient:vertical; -webkit-box-direction:normal; -webkit-flex-direction:column; flex-direction:column;}
.xd-wrap{display:-webkit-box;display:-webkit-flex;display:flex;  -webkit-box-orient:horizontal;  -webkit-box-direction:normal;  -webkit-flex-direction:row;  flex-direction:row; -webkit-flex-wrap:wrap; flex-wrap:wrap;}
.xd-nowrap{display:-webkit-box;display:-webkit-flex;display:flex; -webkit-box-orient:horizontal; -webkit-box-direction:normal; -webkit-flex-direction:row; flex-direction:row; -webkit-flex-wrap:nowrap; flex-wrap:nowrap;}
.xd-space-between{display:-webkit-box;display:-webkit-flex;display:flex; -webkit-box-orient:horizontal; -webkit-box-direction:normal; -webkit-flex-direction:row; flex-direction:row; -webkit-box-pack:justify; -webkit-justify-content:space-between; justify-content:space-between;}
.xd-flex-center{display:-webkit-box;display:-webkit-flex;display:flex; -webkit-box-orient:horizontal; -webkit-box-direction:normal; -webkit-flex-direction:row; flex-direction:row; -webkit-box-pack:center; -webkit-justify-content:center; justify-content:center;}
.xd-flex-end{display:-webkit-box;display:-webkit-flex;display:flex; -webkit-box-orient:horizontal; -webkit-box-direction:normal; -webkit-flex-direction:row; flex-direction:row; -webkit-box-pack:end; -webkit-justify-content:flex-end; justify-content:flex-end;}
.xd-flex-v-top{-webkit-box-align:start;-webkit-align-items:flex-start;align-items:flex-start;}
.xd-flex-v-center{-webkit-box-align:center;-webkit-align-items:center;align-items:center;}
.xd-flex-v-bottom{-webkit-box-align:end;-webkit-align-items:flex-end;align-items:flex-end;}
.xd-flex1{-webkit-box-flex:1;-webkit-flex:1;flex:1;}
/* 宫格布局 */
.xd-grids{padding:0; display:-webkit-box; display:-webkit-flex; display:flex; -webkit-flex-wrap:wrap; flex-wrap:wrap;}
.xd-grids-items{width:100rpx; padding:20rpx 0 0 0; display:-webkit-box; display:-webkit-flex; display:flex;  box-sizing:border-box; -webkit-box-orient:vertical; -webkit-box-direction:normal; -webkit-flex-direction:column; flex-direction:column; -webkit-box-align:center; -webkit-align-items:center; align-items:center;}
.xd-grids-icon{width:100%; height:80rpx; font-size:60rpx; line-height:80rpx; text-align:center;}
.xd-grids-icon-img{width:64rpx; height:64rpx;}
.xd-grids-icon-img-love{width:52rpx; height:52rpx;}
.xd-grids-text{line-height:50rpx; width:100%; text-align:center; font-size:24rpx; margin-top:2px;}
/*  文本  */
.xd-title-h1{font-size:80rpx; color: #101010;}
.xd-title-h2{font-size:60rpx; color: #101010;}
.xd-title-h3{font-size:45rpx; color: #101010;}
.xd-title-h4{font-size:32rpx; color: #101010;}
.xd-title-h5{font-size:30rpx; color: #101010;}
.xd-title-h6{font-size:28rpx; color: #101010;}
.xd-bold{font-weight:bold;}
.xd-desc{font-size:24rpx; line-height:44rpx; color: #888888;}
.xd-desc-small{font-size:22rpx; line-height:40rpx; color: #888888;}
.xd-text-center{text-align:center;}
.xd-ellipsis{overflow:hidden; white-space:nowrap; text-overflow:ellipsis;}
.xd-ellipsis-line2{overflow: hidden; text-overflow: ellipsis; display:-webkit-box; -webkit-box-orient:vertical; -webkit-line-clamp:2;}
/* 边框 */
.xd-border-t-black{border-top:1px solid #d9d9d9;}
.xd-border-b-black{border-bottom:1px solid #d9d9d9;}
.xd-border-t-color{border-top:1px solid #ff9800;}
.xd-border-b-color{border-bottom:1px solid #ff9800;}
.xd-no-border{border:none !important;}
/* 边框阴影 */
.xd-box-shadow{box-shadow:6rpx 4rpx 4rpx 2rpx #ff9800;}
/* 分割线 */
.xd-line{
	width: 100%; height: 6rpx; background: #ff9800;
}
/* 定位 */
.xd-relative{position: relative;}
/* 列表 */
.xd-list{}
.xd-list-items{display:-webkit-box;display:-webkit-flex;display:flex; -webkit-box-orient:horizontal; -webkit-box-direction:normal; -webkit-flex-direction:row; flex-direction:row; -webkit-flex-wrap:nowrap; flex-wrap:nowrap; -webkit-box-align:center; -webkit-align-items:center; align-items:center; -webkit-box-pack:center; -webkit-justify-content:center; justify-content:center;}
.xd-list-image{width:236rpx; height:150rpx; border-radius:20rpx; font-size:0; -webkit-flex-shrink:0; flex-shrink:0;}
.xd-list-head-img{width:70rpx; height:70rpx; border-radius:70rpx; font-size:0; -webkit-flex-shrink:0; flex-shrink:0;}
.xd-list-body{padding:26rpx 0; margin-left:48rpx; width:100rpx; -webkit-box-flex:1; -webkit-flex:auto; flex:auto;}
.xd-list-title{display:-webkit-box;display:-webkit-flex;display:flex; -webkit-box-orient:horizontal; -webkit-box-direction:normal; -webkit-flex-direction:row; flex-direction:row; -webkit-flex-wrap:nowrap; flex-wrap:nowrap; -webkit-box-pack:justify; -webkit-justify-content:space-between; justify-content:space-between;}
.xd-list-title-text{display:block; font-size:30rpx !important; color:#101010; line-height:40rpx; font-weight: bold;}
.xd-list-title-desc,.list-time{display:block; font-size:22rpx; color:#888888; line-height:32rpx;-webkit-flex-shrink:0;flex-shrink:0;}
.xd-list-body-desc{font-size:24rpx; color:#888888; line-height:36rpx; padding-top: 8rpx;}
.xd-list-desc{font-size:28rpx !important; color:#101010; line-height:36rpx;}
/* 标签 */
.xd-tags{display:inline-block; padding:5rpx 12rpx; height:26rpx; line-height:26rpx; font-size:18rpx;}
.xd-tags-large{display:inline-block; padding:6rpx 20rpx;  height:40rpx; line-height:40rpx; font-size:24rpx;}
.xd-tbr{border-radius:5rpx;}
.xd-tbr-large{border-radius:40rpx;display:inline-block; padding:8rpx 12rpx; height:26rpx; line-height:26rpx; font-size:26rpx;}
.xd-tbr-txt-bold{font-weight: bold;}
/* 徽章 */
.xd-badge{font-size:22rpx; color: #888888; position:absolute; right:-20rpx; top:-20rpx; z-index:1;}
/* 搜索框 */
.xd-search-box{
	width: 100%; box-sizing: border-box;
	background: #ffe66f;
	padding: 14rpx 10%;
}
.xd-search{
	background:#bbbbbb; border-radius:66rpx; box-sizing:border-box; padding:6rpx 10rpx; display:-webkit-box; display:-webkit-flex; display:flex; -webkit-flex-wrap:nowrap; flex-wrap:nowrap; -webkit-box-align:center; -webkit-align-items:center; align-items:center; overflow:hidden;
}
.xd-icons.icon-search{
	text-align:center; -webkit-flex-shrink:0; flex-shrink:0;width: 60rpx; height:60rpx;
}
.xd-icons.icon-search image{
	width: 100%; height:100%; display: block;
}
.xd-search-input{width:90%; font-size:26rpx; margin:0 10rpx; border:none; padding:0; color:#ffffff; text-align:center;}

